                                <TextBlock Text="to:" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBox Grid.Column="3" MaxWidth="130" 
                                     Grid.Row="1" VerticalAlignment="Center"
                                     Text="{Binding Year_end,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox MinWidth="200" MinHeight="150" Header="Difference" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"  >
                        <Grid>
                            <Grid.ColumnDefinitions>

                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Income:" VerticalAlignment="Center" HorizontalAlignment="Center"  />
                            <TextBlock Text="Costs:" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                        Grid.Row="1"   Height="16" Width="42"/>

                            <TextBlock Text="{Binding Costs_d,  Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                       VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"
                                       Grid.Column="1"  />
                            <TextBlock Text="{Binding Income_d, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"  TextWrapping="Wrap"
                                        Grid.Row="1" Grid.Column="1"  />

                            <Button VerticalAlignment="Center" Content="Check" MaxWidth="100"
                                    Command="{Binding Button_clik_Check}" Grid.ColumnSpan="2" Grid.Row="2"/>

                        </Grid>
                    </GroupBox>

                    <GroupBox MinHeight="150" MinWidth="400" Header="Statistics" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Margin="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>

                            </Grid.RowDefinitions>

                            <TextBlock Text="Income:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="Costs:" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                        Grid.Row="1"/>

                            <TextBlock Text="{Binding Costs_start,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"
                                       Grid.Column="1"/>
                            <TextBlock Text="{Binding Income_start,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center"  TextWrapping="Wrap"
                                        Grid.Row="1" Grid.Column="1"/>

                            <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Text="{Binding Costs_is,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Text="{Binding Income_is,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Income:" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="Costs:" VerticalAlignment="Center"
                                       Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center"/>

                            <TextBlock Text="{Binding Costs_end , Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                       VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"
                                       Grid.Column="4"/>
                            <TextBlock Text="{Binding Income_end,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"  TextWrapping="Wrap"
                                        Grid.Row="1" Grid.Column="4"/>
                        </Grid>
                    </GroupBox>
                    
                   
                </WrapPanel>

            </TabItem>
            <TabItem Header="Profiles"  Padding="5,0,5,0"
                     Visibility="{Binding Is_visibility,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <GroupBox Header="People" Margin="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="40"/>

                            </Grid.RowDefinitions>

                            <ListView ItemsSource="{Binding Profiles,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Grid.Row="0"
                                      SelectedItem="{Binding Select_item_profile , Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      Grid.Column="0" Grid.ColumnSpan="3"
                                      Margin="2" SelectionMode="Single">

                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FIO,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <Button Grid.Row="1" Margin="5" Content="Сhange"  Command="{Binding Button_clik_edit_profile}"/>
                            <Button Grid.Row="1" Grid.Column="1"  Margin="5"  Command="{Binding Button_clik_del_profile}" Content="Remove" />
                            <Button Grid.Row="1"  Grid.Column="2" Margin="5"  Command="{Binding Button_clik_add_profile}" Content="Adding" />
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="End" Grid.Column="1" Margin="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="75"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>

                            </Grid.RowDefinitions>

                            <StackPanel Grid.RowSpan="2" Grid.ColumnSpan="2">
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="75"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Login: "  TextWrapping="Wrap"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Select_item_profile.Login,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"/>
                                </Grid>
                                <Grid  Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="75"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock  TextWrapping="Wrap" Text="Password: " />
                                    <TextBlock Grid.Column="1" Text="{Binding Select_item_profile.Password,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"/>
                                </Grid>
                                <Grid  Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="75"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Secret word: " Grid.ColumnSpan="2" TextWrapping="Wrap" VerticalAlignment="Top" />
                                    <TextBlock Grid.Column="1" Text="{Binding  Select_item_profile.Secret_word,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"/>
                                </Grid>
                                <Grid  Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="75"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="ID: "  TextWrapping="Wrap"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Select_item_profile.ID,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"/>
                                </Grid>
                                <Grid  Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="75"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Name: "  TextWrapping="Wrap" />
                                    <TextBlock Grid.Column="1" Text="{Binding Select_item_profile.Name,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"/>
                                </Grid>
                                <Grid  Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="75"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Surname: "   TextWrapping="Wrap"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Select_item_profile.Surname,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"/>
                                </Grid>
                                <Grid  Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="75"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Patronymic: "  TextWrapping="Wrap"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Select_item_profile.Patronymic,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"/>
                                </Grid>
                                <Grid  Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="75"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Family: "   TextWrapping="Wrap"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Select_item_profile.Family,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"/>
                                    
                                </Grid>
                                <Grid  Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="75"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Right: "  TextWrapping="Wrap"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Select_item_profile.Right,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"/>

                                </Grid>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                  

                </Grid>

            </TabItem>
        </TabControl>



    </Grid>
</Controls:MetroWindow>
